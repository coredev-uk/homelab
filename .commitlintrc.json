{
  "extends": ["@commitlint/config-conventional"],
  "rules": {
    "scope-enum": [
      2,
      "always",
      [
        "argocd",
        "flux",
        "media", 
        "downloads",
        "infra",
        "dashboard",
        "storage",
        "networking",
        "docs",
        "deps"
      ]
    ],
    "type-enum": [
      2,
      "always",
      [
        "feat",
        "fix", 
        "docs",
        "style",
        "refactor",
        "perf",
        "test",
        "chore"
      ]
    ]
  }
}
