{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:recommended"],
  "prHourlyLimit": 0,
  "argocd": { 
    "managerFilePatterns": ["/\\.yaml$/"] 
  },
  "kubernetes": {
    "managerFilePatterns": ["/\\.yaml$/"]
  },
  "packageRules": [
    {
      "description": "LinuxServer.io images - custom versioning pattern",
      "matchDatasources": ["docker"],
      "matchPackageNames": ["lscr.io/linuxserver/**"],
      "versioning": "regex:^version-v?(?<major>\\d+)\\.(?<minor>\\d+)\\.(?<patch>\\d+)(?:\\.(?<build>\\d+))?(?:-(?<prerelease>[a-zA-Z]+\\d*))?(?<compatibility>.*)?$"
    }
  ]
}
