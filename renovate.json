{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "prHourlyLimit": 0,
  "platformAutomerge": true,
  "flux": {
    "managerFilePatterns": [
      "/flux/.+\\.ya?ml$/",
      "/k8s/.+\\.ya?ml$/",
      "!/flux/flux-system/gotk-components\\.ya?ml$"
    ]
  },
  "kubernetes": {
    "managerFilePatterns": [
      "/k8s/.+\\.ya?ml$/"
    ]
  },
  "packageRules": [
    {
      "description": "Automerge minor and patch updates",
      "matchUpdateTypes": [
        "minor",
        "patch"
      ],
      "automerge": true
    },
    {
      "description": "Flux system updates",
      "matchManagers": [
        "flux"
      ],
      "matchFileNames": [
        "flux/flux-system/gotk-components.yaml"
      ]
    },
    {
      "description": "LinuxServer.io version tags - tracks 'version-X.Y.Z' format only. See: https://www.linuxserver.io/blog/docker-tags-so-many-tags-so-little-time",
      "matchDatasources": [
        "docker"
      ],
      "matchPackageNames": [
        "lscr.io/linuxserver/**"
      ],
      "versioning": "regex:^version-v?(?<major>\\d+)\\.(?<minor>\\d+)\\.(?<patch>\\d+)(?:-r(?<revision>\\d+))?$"
    },
    {
      "description": "Date-based versioning for Homebridge (YYYY-MM-DD) and Pi-hole (YYYY.MM.PATCH)",
      "matchDatasources": [
        "docker"
      ],
      "matchPackageNames": [
        "homebridge/homebridge",
        "pihole/pihole"
      ],
      "versioning": "loose"
    },
    {
      "description": "Override rule for Huntarr to provide correct patch notes",
      "matchDatasources": ["docker"],
      "matchPackageNames": ["huntarr/huntarr"],
      "sourceUrl": "https://github.com/plexguide/Huntarr.io"
    }
  ]
}
