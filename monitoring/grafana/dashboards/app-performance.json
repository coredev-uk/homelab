{
  "id": null,
  "title": "Application Performance",
  "tags": ["homelab", "performance"],
  "style": "dark",
  "timezone": "browser",
  "refresh": "30s",
  "time": {
    "from": "now-1h",
    "to": "now"
  },
  "panels": [
    {
      "id": 1,
      "title": "Service Health Status",
      "type": "stat",
      "targets": [
        {
          "expr": "up{job=~\"frigate|pihole|traefik|gluetun|prometheus|node-exporter\"}",
          "legendFormat": "{{job}}"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "color": {"mode": "thresholds"},
          "thresholds": {
            "steps": [
              {"color": "red", "value": null},
              {"color": "green", "value": 1}
            ]
          },
          "mappings": [
            {"options": {"0": {"text": "Down"}}, "type": "value"},
            {"options": {"1": {"text": "Up"}}, "type": "value"}
          ]
        }
      },
      "gridPos": {"h": 8, "w": 24, "x": 0, "y": 0}
    },
    {
      "id": 2,
      "title": "Frigate Service Status",
      "type": "stat",
      "targets": [
        {
          "expr": "frigate_service_uptime_seconds",
          "legendFormat": "Frigate v{{version}}"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "color": {"mode": "thresholds"},
          "thresholds": {
            "steps": [
              {"color": "red", "value": null},
              {"color": "green", "value": 1}
            ]
          },
          "mappings": [
            {"options": {"0": {"text": "Down"}}, "type": "value"},
            {"options": {"1": {"text": "Running"}}, "type": "value"}
          ]
        }
      },
      "gridPos": {"h": 4, "w": 8, "x": 0, "y": 8}
    },
    {
      "id": 3,
      "title": "VPN Status",
      "type": "stat",
      "targets": [
        {
          "expr": "gluetun_vpn_status",
          "legendFormat": "VPN {{instance}}"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "color": {"mode": "thresholds"},
          "thresholds": {
            "steps": [
              {"color": "red", "value": null},
              {"color": "green", "value": 1}
            ]
          },
          "mappings": [
            {"options": {"0": {"text": "Disconnected"}}, "type": "value"},
            {"options": {"1": {"text": "Connected"}}, "type": "value"}
          ]
        }
      },
      "gridPos": {"h": 4, "w": 8, "x": 8, "y": 8}
    },
    {
      "id": 4,
      "title": "Container Status",
      "type": "stat",
      "targets": [
        {
          "expr": "kube_pod_status_phase{namespace=~\"media|security|monitoring|dns\"} == 1",
          "legendFormat": "{{namespace}}/{{pod}}"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "color": {"mode": "thresholds"},
          "thresholds": {
            "steps": [
              {"color": "red", "value": null},
              {"color": "green", "value": 1}
            ]
          },
          "mappings": [
            {"options": {"0": {"text": "Down"}}, "type": "value"},
            {"options": {"1": {"text": "Running"}}, "type": "value"}
          ]
        }
      },
      "gridPos": {"h": 4, "w": 8, "x": 16, "y": 8}
    },
    {
      "id": 5,
      "title": "CPU Usage by Container",
      "type": "timeseries",
      "targets": [
        {
          "expr": "rate(container_cpu_usage_seconds_total{container!=\"POD\",container!=\"\",namespace=~\"media|security|monitoring|dns\"}[5m]) * 100",
          "legendFormat": "{{namespace}}/{{pod}}/{{container}}"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "percent"
        }
      },
      "gridPos": {"h": 8, "w": 12, "x": 0, "y": 12}
    },
    {
      "id": 6,
      "title": "Memory Usage by Container",
      "type": "timeseries",
      "targets": [
        {
          "expr": "container_memory_usage_bytes{container!=\"POD\",container!=\"\",namespace=~\"media|security|monitoring|dns\"} / 1024 / 1024",
          "legendFormat": "{{namespace}}/{{pod}}/{{container}}"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "MiB"
        }
      },
      "gridPos": {"h": 8, "w": 12, "x": 12, "y": 12}
    },
    {
      "id": 7,
      "title": "Frigate Detection Performance",
      "type": "timeseries",
      "targets": [
        {
          "expr": "frigate_detection_fps",
          "legendFormat": "Detection FPS"
        },
        {
          "expr": "frigate_process_fps",
          "legendFormat": "Process FPS"
        },
        {
          "expr": "frigate_skipped_fps",
          "legendFormat": "Skipped FPS"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "fps"
        }
      },
      "gridPos": {"h": 8, "w": 12, "x": 0, "y": 20}
    },
    {
      "id": 8,
      "title": "Network Bandwidth Usage",
      "type": "timeseries",
      "targets": [
        {
          "expr": "rate(container_network_receive_bytes_total{namespace=~\"media|security|monitoring|dns\"}[5m]) * 8 / 1024 / 1024",
          "legendFormat": "{{namespace}}/{{pod}} - RX"
        },
        {
          "expr": "rate(container_network_transmit_bytes_total{namespace=~\"media|security|monitoring|dns\"}[5m]) * 8 / 1024 / 1024",
          "legendFormat": "{{namespace}}/{{pod}} - TX"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "Mbps"
        }
      },
      "gridPos": {"h": 8, "w": 12, "x": 12, "y": 20}
    }
  ]
}
