{
  "id": null,
  "title": "Security Dashboard",
  "tags": ["homelab", "security"],
  "style": "dark",
  "timezone": "browser",
  "refresh": "30s",
  "time": {
    "from": "now-24h",
    "to": "now"
  },
  "panels": [
    {
      "id": 1,
      "title": "Frigate Status",
      "type": "stat",
      "targets": [
        {
          "expr": "up{job=\"frigate\"}",
          "legendFormat": "Frigate"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "color": {"mode": "thresholds"},
          "thresholds": {
            "steps": [
              {"color": "red", "value": null},
              {"color": "green", "value": 1}
            ]
          },
          "mappings": [
            {"options": {"0": {"text": "Down"}}, "type": "value"},
            {"options": {"1": {"text": "Up"}}, "type": "value"}
          ],
          "noValue": "Down"
        }
      },
      "gridPos": {"h": 4, "w": 6, "x": 0, "y": 0}
    },
    {
      "id": 2,
      "title": "Cert-Manager Status",
      "type": "stat",
      "targets": [
        {
          "expr": "count(certmanager_certificate_ready_status) > 0",
          "legendFormat": "Cert-Manager"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "color": {"mode": "thresholds"},
          "thresholds": {
            "steps": [
              {"color": "red", "value": null},
              {"color": "green", "value": 1}
            ]
          },
          "mappings": [
            {"options": {"0": {"text": "Down"}}, "type": "value"},
            {"options": {"1": {"text": "Up"}}, "type": "value"}
          ]
        }
      },
      "gridPos": {"h": 4, "w": 6, "x": 6, "y": 0}
    },
    {
      "id": 3,
      "title": "TLS Certificates",
      "type": "stat",
      "targets": [
        {
          "expr": "count(certmanager_certificate_ready_status)",
          "legendFormat": "Total Certs"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "color": {"mode": "palette-classic"}
        }
      },
      "gridPos": {"h": 4, "w": 6, "x": 12, "y": 0}
    },
    {
      "id": 4,
      "title": "Detection Events (24h)",
      "type": "stat",
      "targets": [
        {
          "expr": "sum(increase(frigate_camera_events[24h]))",
          "legendFormat": "Total Events"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "color": {"mode": "thresholds"},
          "thresholds": {
            "steps": [
              {"color": "green", "value": 0},
              {"color": "yellow", "value": 50},
              {"color": "red", "value": 200}
            ]
          }
        }
      },
      "gridPos": {"h": 4, "w": 6, "x": 18, "y": 0}
    },
    {
      "id": 5,
      "title": "Detection Events by Object Type",
      "type": "timeseries",
      "targets": [
        {
          "expr": "increase(frigate_camera_events[5m])",
          "legendFormat": "{{label}} ({{camera}})"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "color": {"mode": "palette-classic"},
          "unit": "short"
        }
      },
      "gridPos": {"h": 8, "w": 12, "x": 0, "y": 4}
    },
    {
      "id": 6,
      "title": "Camera Performance (FPS)",
      "type": "timeseries",
      "targets": [
        {
          "expr": "frigate_camera_fps",
          "legendFormat": "{{camera_name}} Camera FPS"
        },
        {
          "expr": "frigate_detection_fps",
          "legendFormat": "{{camera_name}} Detection FPS"
        },
        {
          "expr": "frigate_process_fps",
          "legendFormat": "{{camera_name}} Process FPS"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "color": {"mode": "palette-classic"},
          "unit": "short"
        }
      },
      "gridPos": {"h": 8, "w": 12, "x": 12, "y": 4}
    },
    {
      "id": 7,
      "title": "Certificate Expiry",
      "type": "table",
      "targets": [
        {
          "expr": "(certmanager_certificate_expiration_timestamp_seconds - time()) / 86400",
          "legendFormat": "{{name}}",
          "format": "table",
          "instant": true
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "d",
          "thresholds": {
            "steps": [
              {"color": "red", "value": null},
              {"color": "yellow", "value": 7},
              {"color": "green", "value": 30}
            ]
          }
        }
      },
      "transformations": [
        {
          "id": "organize",
          "options": {
            "excludeByName": {
              "Time": true,
              "__name__": true,
              "instance": true,
              "job": true
            },
            "renameByName": {
              "name": "Certificate",
              "Value": "Days Until Expiry"
            }
          }
        }
      ],
      "gridPos": {"h": 8, "w": 8, "x": 0, "y": 12}
    },
    {
      "id": 8,
      "title": "Frigate CPU Utilization",
      "type": "timeseries",
      "targets": [
        {
          "expr": "frigate_cpu_usage_percent{type=\"Camera\"}",
          "legendFormat": "{{name}} CPU"
        },
        {
          "expr": "frigate_cpu_usage_percent{type=\"Detector\"}",
          "legendFormat": "{{name}} Detector CPU"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "percent",
          "min": 0,
          "color": {"mode": "palette-classic"}
        }
      },
      "gridPos": {"h": 8, "w": 8, "x": 8, "y": 12}
    },
    {
      "id": 10,
      "title": "Storage Utilization",
      "type": "timeseries",
      "targets": [
        {
          "expr": "(frigate_storage_used_bytes / frigate_storage_total_bytes) * 100",
          "legendFormat": "{{storage}} Usage %"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "percent",
          "min": 0,
          "max": 100,
          "thresholds": {
            "steps": [
              {"color": "green", "value": 0},
              {"color": "yellow", "value": 70},
              {"color": "red", "value": 90}
            ]
          }
        }
      },
      "gridPos": {"h": 8, "w": 8, "x": 16, "y": 12}
    },
    {
      "id": 11,
      "title": "Detection Performance",
      "type": "timeseries",
      "targets": [
        {
          "expr": "frigate_detector_inference_speed_seconds",
          "legendFormat": "{{name}} Inference Time"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "s",
          "color": {"mode": "palette-classic"}
        }
      },
      "gridPos": {"h": 8, "w": 12, "x": 12, "y": 20}
    },
    {
      "id": 12,
      "title": "Pod Restart Count",
      "type": "timeseries",
      "targets": [
        {
          "expr": "increase(kube_pod_container_status_restarts_total{namespace=~\"dns|security|cert-manager\"}[1h])",
          "legendFormat": "{{namespace}}/{{pod}}"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "color": {"mode": "palette-classic"}
        }
      },
      "gridPos": {"h": 6, "w": 24, "x": 0, "y": 28}
    }
  ]
}