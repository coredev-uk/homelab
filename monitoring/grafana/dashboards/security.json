{
  "id": null,
  "title": "Security Dashboard",
  "tags": ["homelab", "security"],
  "style": "dark",
  "timezone": "browser",
  "refresh": "30s",
  "time": {
    "from": "now-24h",
    "to": "now"
  },
  "panels": [
    {
      "id": 1,
      "title": "Security Services Status",
      "type": "stat",
      "targets": [
        {
          "expr": "frigate_service_uptime_seconds",
          "legendFormat": "Frigate NVR"
        },
        {
          "expr": "kube_pod_status_phase{namespace=\"security\",phase=\"Running\"}",
          "legendFormat": "Security Pods"
        },
        {
          "expr": "kube_pod_status_phase{namespace=\"core\",pod=~\"traefik.*\",phase=\"Running\"}",
          "legendFormat": "Traefik"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "color": {"mode": "thresholds"},
          "thresholds": {
            "steps": [
              {"color": "red", "value": 0},
              {"color": "green", "value": 1}
            ]
          },
          "mappings": [
            {"options": {"0": {"text": "Down"}}, "type": "value"},
            {"options": {"1": {"text": "Running"}}, "type": "value"}
          ],
          "noValue": "No Data"
        }
      },
      "gridPos": {"h": 4, "w": 8, "x": 0, "y": 0}
    },
    {
      "id": 2,
      "title": "VPN Connection Security",
      "type": "stat",
      "targets": [
        {
          "expr": "gluetun_vpn_status",
          "legendFormat": "VPN Connected"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "color": {"mode": "thresholds"},
          "thresholds": {
            "steps": [
              {"color": "red", "value": 0},
              {"color": "green", "value": 1}
            ]
          },
          "mappings": [
            {"options": {"0": {"text": "Disconnected"}}, "type": "value"},
            {"options": {"1": {"text": "Connected"}}, "type": "value"}
          ]
        }
      },
      "gridPos": {"h": 4, "w": 8, "x": 8, "y": 0}
    },
    {
      "id": 3,
      "title": "Pod Security Status",
      "type": "stat",
      "targets": [
        {
          "expr": "count(kube_pod_status_phase{phase=\"Running\"})",
          "legendFormat": "Running Pods"
        },
        {
          "expr": "count(kube_pod_status_phase{phase=\"Failed\"})",
          "legendFormat": "Failed Pods"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "color": {"mode": "thresholds"},
          "thresholds": {
            "steps": [
              {"color": "green", "value": 0},
              {"color": "yellow", "value": 1},
              {"color": "red", "value": 5}
            ]
          }
        }
      },
      "gridPos": {"h": 4, "w": 8, "x": 16, "y": 0}
    },
    {
      "id": 4,
      "title": "VPN Location & IP Information",
      "type": "table",
      "targets": [
        {
          "expr": "gluetun_vpn_infos",
          "legendFormat": "{{country}} - {{city}} - {{ip}}",
          "format": "table",
          "instant": true
        }
      ],
      "fieldConfig": {
        "defaults": {
          "color": {"mode": "fixed", "fixedColor": "blue"}
        }
      },
      "transformations": [
        {
          "id": "organize",
          "options": {
            "excludeByName": {
              "Time": true,
              "__name__": true,
              "instance": true,
              "job": true,
              "Value": true
            },
            "renameByName": {
              "country": "Country",
              "city": "City",
              "ip": "Public IP"
            }
          }
        }
      ],
      "gridPos": {"h": 6, "w": 12, "x": 0, "y": 4}
    },
    {
      "id": 5,
      "title": "Frigate Detection Status",
      "type": "stat",
      "targets": [
        {
          "expr": "frigate_detection_fps",
          "legendFormat": "{{name}} FPS"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "fps",
          "color": {"mode": "thresholds"},
          "thresholds": {
            "steps": [
              {"color": "red", "value": 0},
              {"color": "yellow", "value": 5},
              {"color": "green", "value": 10}
            ]
          }
        }
      },
      "gridPos": {"h": 6, "w": 12, "x": 12, "y": 4}
    },
    {
      "id": 6,
      "title": "System Security Metrics",
      "type": "timeseries",
      "targets": [
        {
          "expr": "rate(node_context_switches_total[5m])",
          "legendFormat": "Context Switches/sec"
        },
        {
          "expr": "node_processes_pids",
          "legendFormat": "Process Count"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "custom": {
            "drawStyle": "line",
            "lineInterpolation": "linear",
            "barAlignment": 0,
            "lineWidth": 1,
            "fillOpacity": 10,
            "gradientMode": "none",
            "spanNulls": false,
            "insertNulls": false,
            "showPoints": "never",
            "pointSize": 5,
            "stacking": {
              "mode": "none",
              "group": "A"
            },
            "axisPlacement": "auto",
            "axisLabel": "",
            "axisColorMode": "text",
            "scaleDistribution": {
              "type": "linear"
            },
            "axisCenteredZero": false,
            "hideFrom": {
              "legend": false,
              "tooltip": false,
              "vis": false
            },
            "thresholdsStyle": {
              "mode": "off"
            }
          }
        }
      },
      "gridPos": {"h": 8, "w": 12, "x": 0, "y": 10}
    },
    {
      "id": 7,
      "title": "Container Resource Usage Security",
      "type": "timeseries",
      "targets": [
        {
          "expr": "rate(container_cpu_usage_seconds_total{namespace=~\"security|core\",container!=\"\",container!=\"POD\"}[5m]) * 100",
          "legendFormat": "{{namespace}}/{{pod}} CPU %"
        },
        {
          "expr": "container_memory_working_set_bytes{namespace=~\"security|core\",container!=\"\",container!=\"POD\"} / 1024 / 1024",
          "legendFormat": "{{namespace}}/{{pod}} Memory MB"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "custom": {
            "drawStyle": "line",
            "lineInterpolation": "linear",
            "barAlignment": 0,
            "lineWidth": 1,
            "fillOpacity": 10,
            "gradientMode": "none",
            "spanNulls": false,
            "insertNulls": false,
            "showPoints": "never",
            "pointSize": 5,
            "stacking": {
              "mode": "none",
              "group": "A"
            },
            "axisPlacement": "auto",
            "axisLabel": "",
            "axisColorMode": "text",
            "scaleDistribution": {
              "type": "linear"
            },
            "axisCenteredZero": false,
            "hideFrom": {
              "legend": false,
              "tooltip": false,
              "vis": false
            },
            "thresholdsStyle": {
              "mode": "off"
            }
          }
        }
      },
      "gridPos": {"h": 8, "w": 12, "x": 12, "y": 10}
    },
    {
      "id": 8,
      "title": "Pod Security by Namespace",
      "type": "table",
      "targets": [
        {
          "expr": "kube_pod_status_phase{namespace=~\"security|core|monitoring\"}",
          "legendFormat": "{{namespace}}/{{pod}}",
          "format": "table",
          "instant": true
        }
      ],
      "fieldConfig": {
        "defaults": {
          "mappings": [
            {"options": {"1": {"text": "Pending"}}, "type": "value"},
            {"options": {"2": {"text": "Running"}}, "type": "value"},
            {"options": {"3": {"text": "Succeeded"}}, "type": "value"},
            {"options": {"4": {"text": "Failed"}}, "type": "value"},
            {"options": {"5": {"text": "Unknown"}}, "type": "value"}
          ],
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {"color": "green", "value": null},
              {"color": "yellow", "value": 1},
              {"color": "green", "value": 2},
              {"color": "blue", "value": 3},
              {"color": "red", "value": 4},
              {"color": "purple", "value": 5}
            ]
          },
          "custom": {
            "cellOptions": {
              "type": "color-background"
            }
          }
        }
      },
      "transformations": [
        {
          "id": "organize",
          "options": {
            "excludeByName": {
              "Time": true,
              "__name__": true,
              "instance": true,
              "job": true,
              "uid": true,
              "created_by_kind": true,
              "created_by_name": true,
              "host_ip": true,
              "host_network": true,
              "node": true,
              "pod_ip": true,
              "priority_class": true,
              "qos_class": true
            },
            "renameByName": {
              "namespace": "Namespace",
              "pod": "Pod",
              "phase": "Phase",
              "Value": "Status"
            }
          }
        }
      ],
      "gridPos": {"h": 8, "w": 12, "x": 0, "y": 18}
    },
    {
      "id": 9,
      "title": "Network Security Overview",
      "type": "timeseries",
      "targets": [
        {
          "expr": "rate(container_network_receive_bytes_total{namespace=~\"security|core\"}[5m]) * 8",
          "legendFormat": "{{namespace}}/{{pod}} RX"
        },
        {
          "expr": "rate(container_network_transmit_bytes_total{namespace=~\"security|core\"}[5m]) * 8",
          "legendFormat": "{{namespace}}/{{pod}} TX"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "bps",
          "custom": {
            "drawStyle": "line",
            "lineInterpolation": "linear",
            "barAlignment": 0,
            "lineWidth": 1,
            "fillOpacity": 10,
            "gradientMode": "none",
            "spanNulls": false,
            "insertNulls": false,
            "showPoints": "never",
            "pointSize": 5,
            "stacking": {
              "mode": "none",
              "group": "A"
            },
            "axisPlacement": "auto",
            "axisLabel": "",
            "axisColorMode": "text",
            "scaleDistribution": {
              "type": "linear"
            },
            "axisCenteredZero": false,
            "hideFrom": {
              "legend": false,
              "tooltip": false,
              "vis": false
            },
            "thresholdsStyle": {
              "mode": "off"
            }
          }
        }
      },
      "gridPos": {"h": 8, "w": 12, "x": 12, "y": 18}
    },
    {
      "id": 10,
      "title": "Container Restart Events",
      "type": "timeseries",
      "targets": [
        {
          "expr": "increase(kube_pod_container_status_restarts_total{namespace=~\"security|core|monitoring\"}[1h])",
          "legendFormat": "{{namespace}}/{{pod}}/{{container}}"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "color": {"mode": "palette-classic"},
          "thresholds": {
            "steps": [
              {"color": "green", "value": 0},
              {"color": "yellow", "value": 1},
              {"color": "red", "value": 3}
            ]
          },
          "custom": {
            "drawStyle": "line",
            "lineInterpolation": "linear",
            "barAlignment": 0,
            "lineWidth": 1,
            "fillOpacity": 10,
            "gradientMode": "none",
            "spanNulls": false,
            "insertNulls": false,
            "showPoints": "auto",
            "pointSize": 5,
            "stacking": {
              "mode": "none",
              "group": "A"
            },
            "axisPlacement": "auto",
            "axisLabel": "",
            "axisColorMode": "text",
            "scaleDistribution": {
              "type": "linear"
            },
            "axisCenteredZero": false,
            "hideFrom": {
              "legend": false,
              "tooltip": false,
              "vis": false
            },
            "thresholdsStyle": {
              "mode": "off"
            }
          }
        }
      },
      "gridPos": {"h": 8, "w": 24, "x": 0, "y": 26}
    }
  ]
}
