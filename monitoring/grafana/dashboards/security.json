{
  "id": null,
  "title": "Security Dashboard",
  "tags": ["homelab", "security"],
  "style": "dark",
  "timezone": "browser",
  "refresh": "30s",
  "time": {
    "from": "now-24h",
    "to": "now"
  },
  "panels": [
    {
      "id": 1,
      "title": "Security Services Status",
      "type": "stat",
      "targets": [
        {
          "expr": "up{job=\"frigate\"}",
          "legendFormat": "Frigate"
        },
        {
          "expr": "up{job=\"sealed-secrets\"}",
          "legendFormat": "Sealed Secrets"
        },
        {
          "expr": "up{job=\"traefik\"}",
          "legendFormat": "Traefik"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "color": {"mode": "thresholds"},
          "thresholds": {
            "steps": [
              {"color": "red", "value": null},
              {"color": "green", "value": 1}
            ]
          },
          "mappings": [
            {"options": {"0": {"text": "Down"}}, "type": "value"},
            {"options": {"1": {"text": "Up"}}, "type": "value"}
          ],
          "noValue": "Down"
        }
      },
      "gridPos": {"h": 6, "w": 8, "x": 0, "y": 0}
    },
    {
      "id": 2,
      "title": "Pod Security Violations",
      "type": "stat",
      "targets": [
        {
          "expr": "increase(kube_pod_container_status_terminated_reason{reason=\"Error\"}[1h])",
          "legendFormat": "Pod Failures"
        },
        {
          "expr": "increase(kube_pod_status_phase{phase=\"Failed\"}[1h])",
          "legendFormat": "Failed Pods"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "color": {"mode": "thresholds"},
          "thresholds": {
            "steps": [
              {"color": "green", "value": 0},
              {"color": "yellow", "value": 1},
              {"color": "red", "value": 5}
            ]
          }
        }
      },
      "gridPos": {"h": 6, "w": 8, "x": 8, "y": 0}
    },
    {
      "id": 3,
      "title": "TLS Certificates Status",
      "type": "stat",
      "targets": [
        {
          "expr": "count(certmanager_certificate_ready_status == 1)",
          "legendFormat": "Ready Certs"
        },
        {
          "expr": "count(certmanager_certificate_ready_status == 0)",
          "legendFormat": "Failed Certs"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "color": {"mode": "thresholds"},
          "thresholds": {
            "steps": [
              {"color": "red", "value": null},
              {"color": "green", "value": 1}
            ]
          }
        }
      },
      "gridPos": {"h": 6, "w": 8, "x": 16, "y": 0}
    },
    {
      "id": 4,
      "title": "Network Policy Blocked Connections",
      "type": "timeseries",
      "targets": [
        {
          "expr": "increase(node_netstat_IcmpMsg_InType3[5m])",
          "legendFormat": "ICMP Unreachable Messages"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "color": {"mode": "palette-classic"},
          "unit": "short"
        }
      },
      "gridPos": {"h": 8, "w": 12, "x": 0, "y": 6}
    },
    {
      "id": 5,
      "title": "Container Privilege Escalation Attempts",
      "type": "table",
      "targets": [
        {
          "expr": "kube_pod_container_info{container!=\"POD\"}",
          "legendFormat": "{{namespace}}/{{pod}}/{{container}}",
          "format": "table",
          "instant": true
        }
      ],
      "fieldConfig": {
        "defaults": {
          "color": {"mode": "thresholds"},
          "thresholds": {
            "steps": [
              {"color": "green", "value": null},
              {"color": "red", "value": 1}
            ]
          }
        }
      },
      "transformations": [
        {
          "id": "organize",
          "options": {
            "excludeByName": {
              "Time": true,
              "__name__": true,
              "instance": true,
              "job": true,
              "uid": true,
              "created_by_kind": true,
              "created_by_name": true
            },
            "renameByName": {
              "namespace": "Namespace",
              "pod": "Pod",
              "container": "Container"
            }
          }
        }
      ],
      "gridPos": {"h": 8, "w": 12, "x": 12, "y": 6}
    },
    {
      "id": 6,
      "title": "Detection Events (24h)",
      "type": "stat",
      "targets": [
        {
          "expr": "sum(increase(frigate_camera_events[24h]))",
          "legendFormat": "Total Events"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "color": {"mode": "thresholds"},
          "thresholds": {
            "steps": [
              {"color": "green", "value": 0},
              {"color": "yellow", "value": 50},
              {"color": "red", "value": 200}
            ]
          }
        }
      },
      "gridPos": {"h": 4, "w": 6, "x": 0, "y": 14}
    },
    {
      "id": 7,
      "title": "VPN Connection Status",
      "type": "stat",
      "targets": [
        {
          "expr": "gluetun_vpn_status",
          "legendFormat": "Gluetun VPN"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "color": {"mode": "thresholds"},
          "thresholds": {
            "steps": [
              {"color": "red", "value": null},
              {"color": "green", "value": 1}
            ]
          },
          "mappings": [
            {"options": {"0": {"text": "Disconnected"}}, "type": "value"},
            {"options": {"1": {"text": "Connected"}}, "type": "value"}
          ]
        }
      },
      "gridPos": {"h": 4, "w": 6, "x": 6, "y": 14}
    },
    {
      "id": 14,
      "title": "VPN Public IP Info",
      "type": "stat",
      "targets": [
        {
          "expr": "gluetun_vpn_infos",
          "legendFormat": "{{country}} - {{city}}",
          "format": "table",
          "instant": true
        }
      ],
      "fieldConfig": {
        "defaults": {
          "color": {"mode": "thresholds"},
          "thresholds": {
            "steps": [
              {"color": "green", "value": null}
            ]
          },
          "noValue": "No VPN Data"
        }
      },
      "transformations": [
        {
          "id": "organize",
          "options": {
            "excludeByName": {
              "Time": true,
              "__name__": true,
              "instance": true,
              "job": true
            },
            "renameByName": {
              "ip": "Public IP",
              "country": "Country",
              "city": "City"
            }
          }
        }
      ],
      "gridPos": {"h": 4, "w": 6, "x": 12, "y": 14}
    },
    {
      "id": 8,
      "title": "Failed Login Attempts",
      "type": "timeseries",
      "targets": [
        {
          "expr": "increase(traefik_service_request_duration_seconds_count{code=~\"4..\"}[5m])",
          "legendFormat": "HTTP 4xx Errors"
        },
        {
          "expr": "increase(traefik_service_request_duration_seconds_count{code=\"401\"}[5m])",
          "legendFormat": "Unauthorized (401)"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "color": {"mode": "palette-classic"},
          "unit": "short"
        }
      },
      "gridPos": {"h": 8, "w": 12, "x": 12, "y": 14}
    },
    {
      "id": 9,
      "title": "Certificate Expiry",
      "type": "table",
      "targets": [
        {
          "expr": "(certmanager_certificate_expiration_timestamp_seconds - time()) / 86400",
          "legendFormat": "{{name}}",
          "format": "table",
          "instant": true
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "d",
          "thresholds": {
            "steps": [
              {"color": "red", "value": null},
              {"color": "yellow", "value": 7},
              {"color": "green", "value": 30}
            ]
          }
        }
      },
      "transformations": [
        {
          "id": "organize",
          "options": {
            "excludeByName": {
              "Time": true,
              "__name__": true,
              "instance": true,
              "job": true
            },
            "renameByName": {
              "name": "Certificate",
              "Value": "Days Until Expiry"
            }
          }
        }
      ],
      "gridPos": {"h": 8, "w": 8, "x": 0, "y": 18}
    },
    {
      "id": 10,
      "title": "Container Resource Usage Violations",
      "type": "timeseries",
      "targets": [
        {
          "expr": "(container_memory_working_set_bytes / container_spec_memory_limit_bytes) * 100",
          "legendFormat": "{{namespace}}/{{pod}} Memory %"
        },
        {
          "expr": "(rate(container_cpu_usage_seconds_total[5m]) / container_spec_cpu_quota * container_spec_cpu_period) * 100",
          "legendFormat": "{{namespace}}/{{pod}} CPU %"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "percent",
          "min": 0,
          "thresholds": {
            "steps": [
              {"color": "green", "value": 0},
              {"color": "yellow", "value": 80},
              {"color": "red", "value": 95}
            ]
          }
        }
      },
      "gridPos": {"h": 8, "w": 8, "x": 8, "y": 18}
    },
    {
      "id": 11,
      "title": "Pod Restarts (Security Namespaces)",
      "type": "timeseries",
      "targets": [
        {
          "expr": "increase(kube_pod_container_status_restarts_total{namespace=~\"dns|security|cert-manager|traefik|sealed-secrets\"}[1h])",
          "legendFormat": "{{namespace}}/{{pod}}"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "color": {"mode": "palette-classic"},
          "thresholds": {
            "steps": [
              {"color": "green", "value": 0},
              {"color": "yellow", "value": 1},
              {"color": "red", "value": 3}
            ]
          }
        }
      },
      "gridPos": {"h": 8, "w": 8, "x": 16, "y": 18}
    },
    {
      "id": 12,
      "title": "Sealed Secrets Controller Health",
      "type": "timeseries",
      "targets": [
        {
          "expr": "sealed_secrets_controller_unseal_errors_total",
          "legendFormat": "Unseal Errors"
        },
        {
          "expr": "sealed_secrets_controller_unseal_requests_total",
          "legendFormat": "Unseal Requests"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "color": {"mode": "palette-classic"},
          "unit": "short"
        }
      },
      "gridPos": {"h": 6, "w": 12, "x": 0, "y": 26}
    },
    {
      "id": 13,
      "title": "Network Connections by Service",
      "type": "table",
      "targets": [
        {
          "expr": "sum by (service) (traefik_service_open_connections)",
          "legendFormat": "{{service}}",
          "format": "table",
          "instant": true
        }
      ],
      "fieldConfig": {
        "defaults": {
          "color": {"mode": "thresholds"},
          "thresholds": {
            "steps": [
              {"color": "green", "value": 0},
              {"color": "yellow", "value": 100},
              {"color": "red", "value": 500}
            ]
          }
        }
      },
      "transformations": [
        {
          "id": "organize",
          "options": {
            "excludeByName": {
              "Time": true
            },
            "renameByName": {
              "service": "Service",
              "Value": "Open Connections"
            }
          }
        }
      ],
      "gridPos": {"h": 6, "w": 12, "x": 12, "y": 26}
    }
  ]
}