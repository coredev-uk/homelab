{
  "id": null,
  "title": "Network & DNS",
  "tags": ["homelab", "network", "dns"],
  "style": "dark",
  "timezone": "browser", 
  "refresh": "30s",
  "time": {
    "from": "now-1h",
    "to": "now"
  },
  "panels": [
    {
      "id": 1,
      "title": "Pi-hole Pod Status",
      "type": "stat",
      "targets": [
        {
          "expr": "kube_pod_status_phase{namespace=\"core\",pod=~\"pihole.*\",phase=\"Running\"}",
          "legendFormat": "Pi-hole"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "color": {"mode": "thresholds"},
          "thresholds": {
            "steps": [
              {"color": "red", "value": null},
              {"color": "green", "value": 1}
            ]
          },
          "mappings": [
            {"options": {"0": {"text": "Down"}}, "type": "value"},
            {"options": {"1": {"text": "Running"}}, "type": "value"}
          ]
        }
      },
      "gridPos": {"h": 4, "w": 6, "x": 0, "y": 0}
    },
    {
      "id": 2,
      "title": "Traefik Pod Status",
      "type": "stat",
      "targets": [
        {
          "expr": "kube_pod_status_phase{namespace=\"core\",pod=~\"traefik.*\",phase=\"Running\"}",
          "legendFormat": "Traefik"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "color": {"mode": "thresholds"},
          "thresholds": {
            "steps": [
              {"color": "red", "value": null},
              {"color": "green", "value": 1}
            ]
          },
          "mappings": [
            {"options": {"0": {"text": "Down"}}, "type": "value"},
            {"options": {"1": {"text": "Running"}}, "type": "value"}
          ]
        }
      },
      "gridPos": {"h": 4, "w": 6, "x": 6, "y": 0}
    },
    {
      "id": 3,
      "title": "VPN Status",
      "type": "stat",
      "targets": [
        {
          "expr": "gluetun_vpn_status",
          "legendFormat": "VPN Connected"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "color": {"mode": "thresholds"},
          "thresholds": {
            "steps": [
              {"color": "red", "value": 0},
              {"color": "green", "value": 1}
            ]
          },
          "mappings": [
            {"options": {"0": {"text": "Disconnected"}}, "type": "value"},
            {"options": {"1": {"text": "Connected"}}, "type": "value"}
          ]
        }
      },
      "gridPos": {"h": 4, "w": 6, "x": 12, "y": 0}
    },
    {
      "id": 4,
      "title": "Primary Network Interface",
      "type": "stat",
      "targets": [
        {
          "expr": "node_network_up{device=~\"eth0|ens.*|enp.*\"}",
          "legendFormat": "{{device}}"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "color": {"mode": "thresholds"},
          "thresholds": {
            "steps": [
              {"color": "red", "value": null},
              {"color": "green", "value": 1}
            ]
          },
          "mappings": [
            {"options": {"0": {"text": "Down"}}, "type": "value"},
            {"options": {"1": {"text": "Up"}}, "type": "value"}
          ]
        }
      },
      "gridPos": {"h": 4, "w": 6, "x": 18, "y": 0}
    },
    {
      "id": 5,
      "title": "Network Traffic - Primary Interface",
      "type": "timeseries",
      "targets": [
        {
          "expr": "rate(node_network_receive_bytes_total{device=~\"eth0|ens.*|enp.*\"}[5m]) * 8",
          "legendFormat": "{{device}} RX"
        },
        {
          "expr": "rate(node_network_transmit_bytes_total{device=~\"eth0|ens.*|enp.*\"}[5m]) * 8",
          "legendFormat": "{{device}} TX"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "bps",
          "custom": {
            "drawStyle": "line",
            "lineInterpolation": "linear",
            "barAlignment": 0,
            "lineWidth": 2,
            "fillOpacity": 20,
            "gradientMode": "opacity",
            "spanNulls": false,
            "insertNulls": false,
            "showPoints": "never",
            "pointSize": 5,
            "stacking": {
              "mode": "none",
              "group": "A"
            },
            "axisPlacement": "auto",
            "axisLabel": "",
            "axisColorMode": "text",
            "scaleDistribution": {
              "type": "linear"
            },
            "axisCenteredZero": false,
            "hideFrom": {
              "legend": false,
              "tooltip": false,
              "vis": false
            },
            "thresholdsStyle": {
              "mode": "off"
            }
          }
        }
      },
      "gridPos": {"h": 8, "w": 12, "x": 0, "y": 4}
    },
    {
      "id": 6,
      "title": "Network Errors & Drops",
      "type": "timeseries",
      "targets": [
        {
          "expr": "rate(node_network_receive_errs_total{device=~\"eth0|ens.*|enp.*\"}[5m])",
          "legendFormat": "{{device}} RX Errors"
        },
        {
          "expr": "rate(node_network_transmit_errs_total{device=~\"eth0|ens.*|enp.*\"}[5m])",
          "legendFormat": "{{device}} TX Errors"
        },
        {
          "expr": "rate(node_network_receive_drop_total{device=~\"eth0|ens.*|enp.*\"}[5m])",
          "legendFormat": "{{device}} RX Drops"
        },
        {
          "expr": "rate(node_network_transmit_drop_total{device=~\"eth0|ens.*|enp.*\"}[5m])",
          "legendFormat": "{{device}} TX Drops"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "pps",
          "custom": {
            "drawStyle": "line",
            "lineInterpolation": "linear",
            "barAlignment": 0,
            "lineWidth": 1,
            "fillOpacity": 10,
            "gradientMode": "none",
            "spanNulls": false,
            "insertNulls": false,
            "showPoints": "never",
            "pointSize": 5,
            "stacking": {
              "mode": "none",
              "group": "A"
            },
            "axisPlacement": "auto",
            "axisLabel": "",
            "axisColorMode": "text",
            "scaleDistribution": {
              "type": "linear"
            },
            "axisCenteredZero": false,
            "hideFrom": {
              "legend": false,
              "tooltip": false,
              "vis": false
            },
            "thresholdsStyle": {
              "mode": "off"
            }
          }
        }
      },
      "gridPos": {"h": 8, "w": 12, "x": 12, "y": 4}
    },
    {
      "id": 7,
      "title": "DNS Service Containers",
      "type": "table",
      "targets": [
        {
          "expr": "kube_pod_container_status_running{namespace=\"core\",pod=~\"pihole.*\"}",
          "legendFormat": "{{pod}}/{{container}}",
          "format": "table",
          "instant": true
        }
      ],
      "fieldConfig": {
        "defaults": {
          "mappings": [
            {"options": {"0": {"text": "Not Running"}}, "type": "value"},
            {"options": {"1": {"text": "Running"}}, "type": "value"}
          ],
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {"color": "red", "value": 0},
              {"color": "green", "value": 1}
            ]
          },
          "custom": {
            "cellOptions": {
              "type": "color-background"
            }
          }
        }
      },
      "transformations": [
        {
          "id": "organize",
          "options": {
            "excludeByName": {
              "Time": true,
              "__name__": true,
              "instance": true,
              "job": true,
              "namespace": true,
              "uid": true
            },
            "renameByName": {
              "pod": "Pod",
              "container": "Container",
              "Value": "Status"
            }
          }
        }
      ],
      "gridPos": {"h": 6, "w": 12, "x": 0, "y": 12}
    },
    {
      "id": 8,
      "title": "VPN Connection Details",
      "type": "table",
      "targets": [
        {
          "expr": "gluetun_vpn_infos",
          "legendFormat": "{{city}}, {{country}} - {{ip}}",
          "format": "table",
          "instant": true
        }
      ],
      "fieldConfig": {
        "defaults": {
          "color": {"mode": "fixed", "fixedColor": "blue"}
        }
      },
      "transformations": [
        {
          "id": "organize",
          "options": {
            "excludeByName": {
              "Time": true,
              "__name__": true,
              "instance": true,
              "job": true,
              "Value": true
            },
            "renameByName": {
              "city": "City",
              "country": "Country",
              "ip": "Public IP"
            }
          }
        }
      ],
      "gridPos": {"h": 6, "w": 12, "x": 12, "y": 12}
    },
    {
      "id": 9,
      "title": "Container Network Usage",
      "type": "timeseries",
      "targets": [
        {
          "expr": "rate(container_network_receive_bytes_total{pod=~\"pihole.*|traefik.*\"}[5m]) * 8",
          "legendFormat": "{{pod}} RX"
        },
        {
          "expr": "rate(container_network_transmit_bytes_total{pod=~\"pihole.*|traefik.*\"}[5m]) * 8",
          "legendFormat": "{{pod}} TX"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "bps",
          "custom": {
            "drawStyle": "line",
            "lineInterpolation": "linear",
            "barAlignment": 0,
            "lineWidth": 1,
            "fillOpacity": 10,
            "gradientMode": "none",
            "spanNulls": false,
            "insertNulls": false,
            "showPoints": "never",
            "pointSize": 5,
            "stacking": {
              "mode": "none",
              "group": "A"
            },
            "axisPlacement": "auto",
            "axisLabel": "",
            "axisColorMode": "text",
            "scaleDistribution": {
              "type": "linear"
            },
            "axisCenteredZero": false,
            "hideFrom": {
              "legend": false,
              "tooltip": false,
              "vis": false
            },
            "thresholdsStyle": {
              "mode": "off"
            }
          }
        }
      },
      "gridPos": {"h": 8, "w": 24, "x": 0, "y": 18}
    }
  ]
}
